<div class="max-w-screen-sm mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h1 class="text-3xl">New Book</h1>  
  <%= form_with model: @book do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div>
      <%= form.label :author %><br>
      <div  class="flex gap-x-1 items-center">
        <div class="flex-grow">
          <%= collection_select(:book, :author_id, Author.all, :id, :name, {:prompt=>true}, {:class =>'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}) %>
        </div>
        <button class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" type="button">
          New Author
        </button>
      </div>
    <div>

    <div>
      <%= form.label :genre %><br>
      <%= form.text_field :genre, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div>
      <%= form.label :pages %><br>
      <%= form.number_field :pages, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>